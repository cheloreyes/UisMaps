<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        sothree:umanoParalaxOffset="500dp"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoInitialState="hidden">
        <!-- MAIN CONTENT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_container">
            </FrameLayout>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/compass"
                android:src="@mipmap/compass_base"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/compass_pointer"
                android:src="@mipmap/compass_pointer"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="bottom">
                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/loc_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="75dp"
                    android:layout_gravity="right|bottom"
                    android:src="@mipmap/gps_inactive"
                    fab:fab_colorNormal="@color/my_material_green"
                    fab:fab_colorPressed="@color/my_material_light_green"
                    fab:fab_colorRipple="@color/ripple_material_dark" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_text"
                    android:textSize="11dp"
                    android:gravity="left|bottom"/>
            </LinearLayout>
        </RelativeLayout>
        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/dragView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=""/>
                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/btn_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/add_point"
                    fab:fab_colorNormal="@color/my_material_green"
                    fab:fab_colorPressed="@color/my_material_light_green"
                    fab:fab_colorRipple="@android:color/white"
                    fab:fab_shadow="false"/>
            </LinearLayout>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:id="@+id/img_slider"
                android:src="@mipmap/loading_arrow">
            </ImageView>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:id="@+id/nav_info_a"
                        android:textSize="14sp"
                        android:text=""/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:id="@+id/nav_info_b"
                        android:textSize="14sp"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/description_text"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:padding="10dp"
                    android:textSize="15sp"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:id="@+id/info_text_a"
                    android:textSize="12sp"
                    android:text=""/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:id="@+id/info_text_b"
                    android:textSize="12sp"
                    android:text=""/>
                </LinearLayout>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/body_list">
                </ListView>

        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>
